---
import { formatDate, routeTranslations } from "@/lib/utils";
import { getRelativeLocaleUrl } from "astro:i18n";

const { title, description, created, topic, slug, author } = Astro.props;

const postURL = getRelativeLocaleUrl("vi", routeTranslations["vi"].posts);
---

<article class="flex max-w-xl flex-col items-start justify-between">
  <div class="flex items-center gap-x-4 text-xs">
    <time datetime="2020-03-16" class="text-gray-500"
      >{formatDate(created)}</time
    >
    <a
      href={`/topic/${topic?.slug}`}
      class="relative z-10 rounded-full bg-gray-50 px-3 py-1.5 font-medium text-gray-600 hover:bg-gray-100"
      >{topic?.name}</a
    >
  </div>
  <div class="group relative">
    <h3
      class="mt-3 text-lg/6 font-semibold text-gray-900 group-hover:text-gray-600"
    >
      <a href={`${postURL}${slug}`}>
        <span class="absolute inset-0"></span>
        {title}
      </a>
    </h3>
    <p class="mt-5 line-clamp-3 text-sm/6 text-gray-600">
      {description}
    </p>
  </div>
  <div class="relative mt-8 flex items-center gap-x-4">
    <img
      src="https://github.com/evilrabbit.png"
      alt=""
      class="size-10 rounded-full bg-gray-50"
    />
    <div class="text-sm/6">
      <p class="font-semibold text-gray-900">
        <a href="#">
          <span class="absolute inset-0"></span>
          {author?.name}
        </a>
      </p>
      <p class="text-gray-600">{author?.bio}</p>
    </div>
  </div>
</article>
